<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header') %>
  <body>
    <div class="container-fluid mx-auto" style="width: 350px">
      <h4>Sign in</h4>
      <% if(message){ %> <span class="text-danger"><%= message %></span> <% } %>
      <br />
      <%if(password.length>0){ %>
      <span>Your password is : <b><%= password %></b> </span><% } %>
      <form action="/signin" method="post">
        <div style="font-size: small">
          Don't have an account?
          <a href="/signup" class="text-primary text-opacity-75">Sign Up</a>
        </div>
        <div>
          <label for="email">Email</label><br />
          <input type="email" id="email" name="email" required />
        </div>
        <div>
          <label for="password">Password</label><br />
          <input type="password" name="password" id="password" required />
        </div>
        <div style="font-size: small">
          <a href="/forgotpass" class="text-primary text-opacity-75"
            >Forgot Your Password?</a
          >
        </div>
        <button type="submit" class="btn btn-primary">Sign in</button>
      </form>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
